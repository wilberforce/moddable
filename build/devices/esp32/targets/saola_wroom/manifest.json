{
	"build":{
		"ESP32_SUBCLASS": "esp32s2",
		"IDF_USE_VERSION": "4"
	},
	"modules": {
		"setup/target": "./setup-target",
		"*": [
			"$(MODULES)/drivers/neopixel/*",
			"$(MODULES)/drivers/neopixel/esp32/*"
		]
	},
	"preload": [
		"setup/target",
		"neopixel"
	],
	"config": {
		"screen": "",
		"neopixel": 18,
		"rainbow": true
	},
	"defines": {
		"i2c": {
			"sda_pin": 20,
			"scl_pin": 19
		},
		"spi": {
			"miso_pin":8,
			"mosi_pin":9,
			"sck_pin": 15
		},
		"ili9341": {
			"hz": 40000000,
			"cs_pin": 11,
			"dc_pin": 13,
			"rst_pin": 16,
			"spi_port": 2
		}
	}
}
